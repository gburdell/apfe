#!/bin/csh -f

set cmd=$0
if (1 > `echo $cmd | egrep -c '^/'`) then
	set cmd=$PWD/${cmd}
endif
set rdir=$cmd:h:h

set cls="apfe.dsl.vlogpp.Main"
set jars=${rdir}/vlogpp/dist/lib/apfe.jar:${rdir}/vlogpp/dist/vlogpp.jar
exec java -Xms2G -ea -Dtool.root=${rdir} -cp ${jars} ${cls} ${*} | \
	awk '$0 ~ /^(Warn|Info) :/{printf"// %s\n",$0};$0 !~ /^(Warn|Info) :/{print}'
